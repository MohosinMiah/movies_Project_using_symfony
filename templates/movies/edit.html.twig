{% extends 'base.html.twig' %}

{% block title %}Movie List{% endblock %}

{% block body %}
	<div class="row">
		<div class="jumbotron text-center">
			<strong class="text text-warning"> Edit {{movie.title}}</strong>
			<br>
			<a href="{{ path('movie_list') }}" class="btn btn-primary">Movie List</a>
		</div>
		<div class="container">
			<form action="{{ path('movie_update', {'id': movie.id}) }}" method="post">
				<div class="form-group">
				  <label for="title">Movie Title</label>
				  <input type="text" class="form-control" name="title" value="{{ movie.title }}" id="title" aria-describedby="title" >
				</div>

				<div class="form-group">
					<label for="title">Movie Description</label>
					<textarea class="form-control" name="description" id="description" aria-describedby="description" >{{ movie.description }}</textarea>
				</div>
				
				<button type="submit" class="btn btn-primary">Update</button>
			  </form>
			<hr>
			<br />
			<h1> Actor List</h1>
			<ul class="list-group">
				{% for actor in movie.actors %}
					<li class="list-group-item"><strong>Actor Name:</strong> {{actor.name}}</li>
				{% endfor %}
			</ul>
		</div>

	</div>
{% endblock %}
