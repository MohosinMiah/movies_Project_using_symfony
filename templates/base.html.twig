            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <nav class="navbar navbar-default">
            <div class="container-fluid">
              <div class="navbar-header">
                <a class="navbar-brand" href="/">Movie Store</a>
              </div>
              <ul class="nav navbar-nav">
                <li class="active"><a href="{{path('movie_list')}}">Home</a></li>
                <li><a href="{{ path('movie_list') }}">Movies</a></li>
                <li><a href="{{ path('actor_list') }}">Actors</a></li>
                <li><a href="{{ path('app_register') }}">Register</a></li>
                <li><a href="{{ path('app_login') }}">Login</a></li>
                <li><a href="#">About US</a></li>
              </ul>
            </div>
          </nav>
        {% block body %}{% endblock %}
    </body>
</html>
